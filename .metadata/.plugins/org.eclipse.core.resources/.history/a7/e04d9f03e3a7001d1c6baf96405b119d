package aula_01;

import java.util.Scanner;

public class Atividade_03 {
	
		public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		
		float salarioBruto,adicionalNoturno,horasExtras,descontos = 0,salarioLiquido;
		   
		   System.out.println("Insira o salarioBruto: ");
		   salarioBruto = scan.nextFloat();
		   
		   System.out.println("Insira o adicional Noturno: ");
		   adicionalNoturno = scan.nextFloat();
		   
		   System.out.println("Insira as Horas Extras: ");
		   horasExtras = scan.nextFloat();
		   
		   salarioLiquido = (salarioBruto+adicionalNoturno +(horasExtras*5)-descontos) /4;
		   
		   System.out.printf("O Salário liquido é: ",salarioLiquido);
		
		
	}
}

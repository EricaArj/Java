		Scanner exibir = new Scanner(System.in);
	
		
		double salario ;
		double abono ;
		double novoSalario;
		
		
		System.out.println("\nvalor do Sal√°rio: ");
		abono = exibir.nextDouble();
		System.out.println("valor do abono: ");
		abono = exibir.nextDouble();
		
		novoSalario = salario + abono;
		System.out.print("Valor Atualizado com Abono: " + novoSalario);
	
		
	}

}
